@page
@model MobileStore.Web.Pages.KhuyenMaiModel
@{
    ViewData["Title"] = "Khuyến mãi hiện có";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold border-bottom pb-2" style="color:#2c3e50;">🎉 Các chương trình khuyến mãi nổi bật</h2>
        <form class="d-flex" method="get">
            <input type="text" name="search" class="form-control me-2" placeholder="Tìm mã khuyến mãi hoặc nội dung..." />
            <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>
    </div>
    <div class="row">
        @foreach (var km in Model.KhuyenMais)
        {
            var conHieuLuc = km.NgayKetThuc >= DateTime.Today;
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 h-100 position-relative">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary mb-2"><i class="bi bi-gift"></i> KM: <strong>@km.MaKhuyenMai</strong></h5>
                        <p class="card-text text-muted mb-1">
                            <i class="bi bi-calendar-event"></i> <strong>Ngày bắt đầu:</strong> @km.NgayBatDau.ToString("dd/MM/yyyy")
                        </p>
                        <p class="card-text text-muted mb-1">
                            <i class="bi bi-calendar-check"></i> <strong>Ngày kết thúc:</strong> @km.NgayKetThuc.ToString("dd/MM/yyyy")
                        </p>
                        <p class="card-text mt-2 text-dark" style="flex: 1;">
                            <i class="bi bi-info-circle"></i> @km.NoiDung
                        </p>
                        <div class="mt-3 d-flex justify-content-between align-items-center">
                            <span class="badge @(conHieuLuc ? "bg-success" : "bg-secondary")">
                                @(conHieuLuc ? "Còn hiệu lực" : "Hết hạn")
                            </span>
                            <a href="/SanPham" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-tags"></i> Áp dụng ngay
                            </a>
                        </div>
                    </div>
                    @if (!conHieuLuc)
                    {
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-danger">Hết hạn</span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a href="/SanPham" class="btn btn-warning px-4 py-2 fw-semibold"><i class="bi bi-cart"></i> Mua sắm ngay</a>
    </div>
</div>
